# ============================================================================
# Project Aegis - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (verbose logging, detailed errors)
DEBUG=true

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLAlchemy Database URL
# SQLite (default): sqlite:///./data/aegis_trust_vault.db
# PostgreSQL: postgresql://user:password@localhost/aegis_db
DATABASE_URL=sqlite:///./data/aegis_trust_vault.db

# Enable SQL query logging (useful for debugging)
DB_ECHO=false

# ============================================================================
# AI/LLM INTEGRATION (Optional)
# ============================================================================

# OpenAI API Key for advanced scam analysis
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI Model Selection
# Options: gpt-4, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4

# Enable/Disable LLM features (falls back to pattern matching if false)
LLM_ENABLED=false

# Anthropic Claude API Key (future support)
ANTHROPIC_API_KEY=

# ============================================================================
# LITHIC VIRTUAL CARD INTEGRATION
# ============================================================================

# Lithic API Key
# Get your key from: https://dashboard.lithic.com/
LITHIC_API_KEY=

# Lithic Environment: sandbox or production
LITHIC_ENVIRONMENT=sandbox

# Webhook Secret for verifying Lithic callbacks
LITHIC_WEBHOOK_SECRET=

# Default spending limits (in cents)
LITHIC_DEFAULT_DAILY_LIMIT=10000
LITHIC_DEFAULT_MONTHLY_LIMIT=100000

# ============================================================================
# NOTIFICATION SERVICES
# ============================================================================

# --- Twilio SMS Notifications ---
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# --- SendGrid Email Notifications ---
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=aegis@example.com
SENDGRID_FROM_NAME=Project Aegis

# --- Webhook Notifications ---
# URL for advocate/caregiver notifications
WEBHOOK_URL=

# --- Firebase Push Notifications (Mobile) ---
# Path to Firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# Secret key for JWT tokens and session encryption
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# CORS Allowed Origins (comma-separated)
# Development: http://localhost:5173,http://localhost:3000
# Production: https://yourdomain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Token Expiration (in minutes)
JWT_EXPIRATION_MINUTES=1440

# ============================================================================
# TRUSTED ADVOCATE CONFIGURATION
# ============================================================================

# Primary caregiver email for critical alerts
TRUSTED_ADVOCATE_EMAIL=

# Primary caregiver phone for SMS alerts
TRUSTED_ADVOCATE_PHONE=

# Secondary contacts (comma-separated)
SECONDARY_CONTACTS_EMAIL=
SECONDARY_CONTACTS_PHONE=

# ============================================================================
# SENTINEL MODULE CONFIGURATION
# ============================================================================

# Fraud score threshold for blocking calls (0-100)
SENTINEL_BLOCK_THRESHOLD=80

# Fraud score threshold for answer bot activation (0-100)
SENTINEL_BOT_THRESHOLD=50

# Enable automatic call blocking
SENTINEL_AUTO_BLOCK=false

# ============================================================================
# ADVOCATE MODULE CONFIGURATION
# ============================================================================

# Enable autonomous subscription cancellation (shadow mode)
ADVOCATE_AUTO_CANCEL=false

# Subscription usage threshold for cancellation recommendation (0-100)
ADVOCATE_USAGE_THRESHOLD=20

# Medical bill risk score threshold for flagging (0-100)
ADVOCATE_BILL_RISK_THRESHOLD=30

# ============================================================================
# PLAYWRIGHT AUTOMATION
# ============================================================================

# Headless mode for browser automation
PLAYWRIGHT_HEADLESS=true

# Browser timeout (in milliseconds)
PLAYWRIGHT_TIMEOUT=30000

# Screenshot directory for audit trail
PLAYWRIGHT_SCREENSHOT_DIR=./data/screenshots

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./data/aegis.log

# Enable JSON structured logging
LOG_JSON=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable blockchain audit trail (future)
ENABLE_BLOCKCHAIN=false

# Enable machine learning models (future)
ENABLE_ML_MODELS=false
